<h1 class="title column">{{restaurant.name}}</h1>

<div class="columns">
    {{#each restaurant.burgers as |burger|}}
    <div class="column">
        <div class="card">
            <div class="card-image">
                <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                </figure>
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4">{{burger.name}}</p>
                    </div>
                </div>

                <div class="content">
                    {{burger.burgerDetails}}
                </div>
            </div>
        </div>

        <button data-id="{{burger.id}}" class="button is-primary">Order</button>

    </div>
    {{/each}}
</div>

<script src="/js/order.js"></script>