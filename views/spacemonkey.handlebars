
<h1 class="title has-text-centered">Our Handsome Monkeys</h1>
<section class="section">
  <div class="container">
    <div class="columns is-mobile">
      {{#each spacemonkeys as |spacemonkey|}}
      <div class="column is-one-fifth">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by4">
              <img src="{{spacemonkey.image}}" alt="{{spacemonkey.name}}'s Image">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4">{{spacemonkey.name}}</p>
              </div>
            </div>
            <div class="content">
              <p>{{spacemonkey.bio}}</p>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</section>