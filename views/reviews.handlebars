<h1 class="title has-text-centered">Check out the Amazing Reviews</h1>
<section class="section">
  <div class="container">
    <div class="columns is-mobile">
      {{#each reviews as |review|}}
      <div class="column is-one-fifth">
        <div class="card-image">
          <figure class="image is-4by4">
            <img src="{{burger.image}}" alt="{{burger.name}}'s Image">
          </figure>
        </div>
        <div class="card">
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4">{{review.burger.name}}</p>
              </div>
            </div>
            <div class="content">
              <p>{{review.reviewDetails}}</p>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <aside class="container" class="container is-primary ">
      <h2 class="label">Give us your feedback</h2>
      <div class="field">
        <h3>Which buger?</h3>
        <h4 class="label" for="burger">Burger</h4>
        <div class="control">
          <select id="burger_id">
            {{#each burgers as |burger|}}
            <option value="{{burger.id}}">{{burger.name}}</option>
            {{/each}}
          </select>
        </div>
        <h4 class="label" for="review">Review</h4>
        <div class="control">
          <input class="input is-small" type="review" id="reviewDetails" name="review" placeholder="What do you want to say?" required>
        </div>
        <div class="control is-one-fith">
          <button class="button is-link">Submit</button>
        </div>
    </aside>
</section>

<script src="/js/addReview.js">

</script>